@model HCPortal.Models.ModeratorLOC

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogIn.cshtml";

}

<div class="container signin-container">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-12 col-md-8">
            <div class="card signin-card">
                <div class="card-block">
                    <img src="~/Content/assets/moder.png" class="img img-fluid signin-img">
                    <h4 class="text-center">Moderator</h4>


                    @using (Html.BeginForm("LoginModerator","Auth",FormMethod.Post, new { @class = "sigin-form" }))
                    {
                        @Html.AntiForgeryToken();

                        <div class="form-group">
                            @Html.EditorFor(model => model.korisnicko_ime, new { htmlAttributes = new { @class = "form-control", placeholder = "Korisnicko ime" } })
                        </div>

                        <div class="form-group">
                            @Html.EditorFor(model => model.sifra, new { htmlAttributes = new { @class = "form-control", placeholder = "Sifra",type="password" } })
                        </div>

                        <button type="submit" class="btn signin-btn btn-lg">Prijavi Se</button>
                    }
                </div>
            </div>

        </div>
        <div class="col"></div>
    </div>
</div>




