@model IEnumerable<HCPortal.Models.OdeljenjeLOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutModerator.cshtml";
}


<div class="col-lg-6">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Razred</th>
                <th>Opcije</th>
            </tr>
        </thead>
            @foreach(var odeljenje in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => odeljenje.sifra_odeljenja)</td>
                    <td>@Html.DisplayFor(model => odeljenje.naziv)</td>
                    <td>@Html.DisplayFor(model => odeljenje.razred.naziv)</td>
                    <td>@Html.ActionLink("Izmeni","Edit","Odeljenje", new { id = odeljenje.sifra_odeljenja}, new {@class="btn btn-info"})</td>
                </tr>
            }

        <tbody>
            

        </tbody>
    </table>
</div>

