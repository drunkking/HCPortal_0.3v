@model IEnumerable<HCPortal.Models.OdeljenjeLOC>


@{
    ViewBag.Title = "PregledOdeljenja";
    Layout = "~/Views/Shared/_LayoutModerator.cshtml";
}


<div id="page-content-wrapper">

    <div class="container-fluid">
        <h1 class="text-center pt-5">Pregled odeljenja</h1>
        <br />

        <div class="row justify-content-center pt-3">
            <div class='col-7'>
                <table class="table table-hover text-center">
                    <thead>
                        <tr>
                            <th>Sifra</th>
                            <th>Naziv</th>
                            <th>Pregledaj učenike</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var odeljenje in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => odeljenje.sifra_odeljenja)</td>
                                <td>@Html.DisplayFor(model => odeljenje.naziv)</td>
                                <td>@Html.ActionLink("Pregledaj", "PregledUcenika", "Dnevnik", new {odeljenje = odeljenje.sifra_odeljenja }, new { @class = "btn btn-primary" })</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>


        </div>
    </div>
</div>
